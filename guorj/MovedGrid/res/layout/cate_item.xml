<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

<RelativeLayout
    android:id="@+id/rl_subscribe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="40.0dip"
    android:minWidth="130.0dip" >

    <TextView
        android:id="@+id/text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/category_item_bg"
        android:gravity="center"
        android:minHeight="35.0dip"
        android:minWidth="125.0dip"
        android:textColor="@color/category_item_text_color"
        android:textSize="16.0sp"
        android:layout_margin="4dp"
         />
    <!-- android:layout_margin="5dip" -->

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/category_item_delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
       />
</RelativeLayout>

</RelativeLayout>